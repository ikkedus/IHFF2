@model IHFF.Models.MovieInfoItem


<div id="ProgramRestaurant" style="display:none">
    <div id="programName">
    </div>
    <div id="programPoster">
    </div>
    <table>
        <tr>
            <td>Aantal personen</td>
            <td><input type="number" id="programAantal" /></td>
        </tr>
        <tr>
            <td>Datum</td>
            <td><input type="datetime-local" id="programDate" /></td>
        </tr>
    </table>
    <div style="float: right">
        <a class="blueBtn" id="confirmReservationButton" onclick="confirmProgram()">Confirm</a>
    </div>
</div>

    <div class="container-fluid moviecollum">
        <div class="row">
            <div class="col-md-12 banner">
                    <img src="@Model.banner" />
                <div class="row">
                    <div class="col-md-9 sidebarmovies">
                        <h1> @Model.title</h1>
                        <p> @Model.plot_EN</p>
                        <div class="row">
                            <div class="col-md-10">
                                <h2>Trailer</h2>
                                <iframe class ="trailer "src= "@Model.trailer"></iframe>
                            </div>
                            <div class="col-md-2">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <h3>Actors</h3>
                        <p>@Model.actor</p>
                        <h3>Directors</h3>
                        <p>@Model.director</p>
                        <h3>Release Date</h3>
                        <p>@Model.releasedate</p>
                        <h3>Duration</h3>
                        <p>@Model.duration Minutes</p>
                        <h3>Price</h3>
                        <p>€@Model.Price</p>
                        <h3>Showtimes</h3>
                        <p>@foreach (var time in Model.times)
                        {
                            @time.Start
                            @time.End
                            @time.Location
                            @time.day
                        }</p>
                        @Html.ActionLink("Back", "index", "Movie", new { id = Model.id }, new { @class = "blueBtn" })

                        <a href="#" data-id="@Model.ProductId" class="orderNow yellowBtn">Order now</a>

                        <a class="blueBtn" onclick="openProgramDialog(); fillProgramDialogInfo(@Model.ProductId, '@Model.name', '@Model.banner')">
                            Add to program
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>

<script>
    $(document).ready(function () {
        $('.orderNow').click(function (e) {
            e.preventDefault();
            var id = $(this).attr("data-id");
            var amount = prompt("Hoeveel tickets");
            AddProductToCart(id, amount);
        });
    });
</script>

