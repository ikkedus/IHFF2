
<section class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Interstellar</h4>
</section>
<section class="modal-body">
    <section class="row">
        <section class="col-md-4">
            <img style="max-width:100%;" src="https://upload.wikimedia.org/wikipedia/en/b/bc/Interstellar_film_poster.jpg" />
        </section>
        <section class="col-md-8">
            <div class="row"> A team of explorers travel through a wormhole in space in an attempt to ensure humanity's survival.</div>
            <div id="seatmap" class="row">

            </div>
        </section>
    </section>
</section>
<section class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-primary">Order</button>
</section>
<script>
    $(document).ready(function () {
        var sc = $('#seatmap').seatCharts({
            map: [
                '__aaaaaaaaaaaaa__',
                '__aaaaaaaaaaaaa__',
                '_aaaaaaaaaaaaaaa_',
                '_aaaaaaaaaaaaaaa_',
                'aaaaaaaaaaaaaaaaa',
                'aaaaaaaaaaaaaaaaa',
            ],
            seats: {
                a: {
                    classes: 'seats fa fa-2x fa-user'
                },
                c: {
                    classes: 'seats fa fa-2x fa-user-o'
                }

            },
            click: function () {
                console.log(this);
                if (this.status() == 'available') {
                    //do some stuff, i.e. add to the cart
                    return 'selected';
                } else if (this.status() == 'selected') {
                    //seat has been vacated
                    return 'available';
                } else if (this.status() == 'unavailable') {
                    //seat has been already booked
                    return 'unavailable';
                } else {
                    return this.style();
                }
            }
        });
        sc.find('c.available').status('unavailable');
    });
</script>