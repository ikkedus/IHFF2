@model IEnumerable<IHFF.Models.Culture>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h1>International Haarlem Film Festival</h1>
    <p class="lead">@IHFF.App_GlobalResources.Resources.Welcome</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<!--title, descript, poster-->
@foreach (var item in Model)
{
    <div class="jumbotron container-fluid">
        <div class="row">
            <div class="col-md-4 vertical">
                    <img src="@item.Poster" class="img-responsive" alt="Teylers Museum" />
                </div>
            <div class="col-md-5 centered">
                <div class="text-center">
                    <h2>
                        @Html.DisplayFor(modelItem => item.Title)
                    </h2>
                    <div class="vertical">
                        @if (Culture.ToUpper().Contains("NL"))
                {
                            @Html.DisplayFor(modelItem => item.Description_NL)
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.Description_EN)
                            @*  *@}
                    </div>
                </div>
            </div>
            <div class="col-md-3 centered">
                <div class="map" style="width:100%;height:300px"></div>
                <script>
                    function myMap() {
                        var mapOptions = {
                            center: new google.maps.LatLng(51.5, -0.2),
                            zoom: 5
                        }
                        var maps = document.getElementsByClassName("map");
                        for (i = 0; i < maps.length; i++) {
                            var map = new google.maps.Map(maps[i], mapOptions);
                        }
                    }
                </script>
                <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBu-916DdpKAjTmJNIgngS6HL_kDIKU0aU&callback=myMap"></script> 
            </div>
        </div>
    </div>
}
