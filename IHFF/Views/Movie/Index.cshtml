@model IEnumerable<IHFF.Models.Movy>
    <br />
    <ul>
        <li><a class="btn btn-default" href="">@IHFF.App_GlobalResources.Resources.Woensdag</a></li>
        <li><a class="btn btn-default" href="">@IHFF.App_GlobalResources.Resources.Donderdag</a></li>
        <li><a class="btn btn-default" href="">@IHFF.App_GlobalResources.Resources.Vrijdag</a></li>
        <li><a class="btn btn-default" href="">@IHFF.App_GlobalResources.Resources.Zaterdag</a></li>
        <li><a class="btn btn-default" href="">@IHFF.App_GlobalResources.Resources.Zondag</a></li>
    </ul>

@foreach (var item in Model)
{
    <section class="movies">
        <div class="row">
            <div class="col-md-3">
                <div class="m-image">
                    <img src="@Html.DisplayFor(modelItem => item.poster)" />
                </div>
            </div>
            <div>
                @Html.DisplayFor(modelItem => item.Title)
            </div>
            <div class="col-md-6">
                @Html.DisplayFor(modelItem => item.Plot_EN)
            </div>
            <div class="col-md-3">
                @Html.ActionLink("More", "More", new { id = item.id }) |
                @Html.ActionLink("Order Now", "Order Now", new { id = item.id }) |
                @Html.ActionLink("Add to Program", "Add to Program", new { id = item.id })
            </div>
        </div>
    </section>
}
