@model IEnumerable<IHFF.Models.Restaurant>

@{
    ViewBag.Title = "Restaurants";
}


<script>
    function MapsLocation(location) {
        var str1 = "https://maps.google.com/maps?q=";
        var str2 = "&t=&z=14&ie=UTF8&iwloc=&output=embed";
        document.getElementById('maps').src = str1 + location + str2;


    }

        $(document).ready(function () {
            $("#result").dialog({
                autoOpen: true,
                title: 'Persoonlijk Programma',
                width: 500,
                height: 'auto',
                modal: true,
                
                
            });
        });
    
function openPopup() {
    $("#result").dialog("open");
}

$(function () {
    $("#dialog").dialog();
});

</script>

<div class="row">
    <div class="col-md-9">
        <div id="result" style="display:none;">
            Dit is het persoonlijke programma
        </div>


        @foreach (var item in Model)
        {
            <div class="container-fluid">
                <div class="row box">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-4">
                                <img style="width: 230px;height: 150px;margin: 10px;margin-top: 25px;" src="@Html.DisplayFor(modelItem => item.Poster)" />
                            </div>
                            <div class="col-md-8">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h3>
                                            <div class="title" onclick="MapsLocation('@item.Address')">
                                                @Html.DisplayFor(modelItem => item.Name)
                                               
                                            </div>
                                        </h3>
                                        <p>
                                            @Html.DisplayFor(modelItem => item.Description_EN)

                                            @Html.DisplayFor(modelItem => item.Description_NL)
                                        </p>
                                    </div>
                                    <div class="col-md-4">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        @Html.DisplayFor(modelItem => item.Address)
                                        <br />
                                        Openingstijden:

                                        @Html.DisplayFor(modelItem => item.OpenHours)
                                    </div>
                                    <div class="col-md-6 alignbottom">
                                        @Html.ActionLink("More...", "Details", new { id = item.Id }, new {@class = "blueBtn"})
                                        @Html.ActionLink("Add to program", "AddToProgram", new { id = item.Id }, new { @class = "yellowBtn" }) 
                                        @Html.ActionLink("Order now", "OrderNow", new { id = item.Id }, new { @class = "blueBtn" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-3">
        <iframe style="position:fixed" id="maps" width="25%" height="375" frameborder="0" scrolling="no" marginheight="0" src="https://maps.google.com/maps?q=Haarlem&t=&z=14&ie=UTF8&iwloc=&output=embed" marginwidth="0"><a class="addmaps" href="http://www.webdesign-muenchen.me" id="get-map-data" mce_href="http://maps.google.com/maps/">webdesign münchen</a>
        <style>
            #gmap_canvas img {
                max-width: none !important;
                background: none !important;
            }
        </style></iframe>
    </div>
</div>



