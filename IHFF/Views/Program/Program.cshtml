@model List<IHFF.Models.ProductVm>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Persoonlijk Programma</h4>
</div>
@using (Html.BeginForm("", "", FormMethod.Post))
{
    <div class="modal-body">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <div class="row">
                    <div class="col-md-3">
                        <img style="height: 120px; max-width:200px;" src="@item.Poster" />
                    </div>
                    <div class="col-md-6">
                        <h4>
                            @item.Title
                        </h4>
                    </div>
                    <div class="col-md-3">
                        <h4>
                            @item.Attendanties
                        </h4>
                    </div>
                </div>
            }
        }
        else
        {
            
        }

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" onclick="DeleteProgram()">Leeg maken</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Sluiten</button>
        <button class="btn btn-primary" onclick="AddProgramToCart()">Programma in winkelwagen zetten</button>
    </div>
}

